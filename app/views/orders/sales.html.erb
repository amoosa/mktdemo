<div class="center">
  <h3>Sales History for <%= current_user.name %></h3>
</div>

<% if user_signed_in? %>
  <p><b>Download orders:</b> <%= link_to "CSV", sales_path(format: "csv") %></p>
<% end %>
<p><%= will_paginate @listings, renderer: BootstrapPagination::Rails %></p>
<table class="table table-condensed">
  <tr>
    <th class="col-md-1">Order ID</th>
    <th class="col-md-1">Date Sold</th>
    <th class="col-md-1">Image</th>
    <th class="col-md-1">Item</th>
    <th class="col-md-1">Price</th>
    <th class="col-md-2">Shipping Details</th>
    <th class="col-md-2">Carrier (UPS, USPS, etc.)</th>
    <th class="col-md-3">Shipment Tracking #</th>
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.created_at.strftime("%B %-d, %Y") %></td>
      <td><%= image_tag order.listing.image.url(:thumb) %></td>
      <td><%= order.listing.name.downcase.titleize %></td>
      <td><%= number_to_currency(order.listing.price) %></td>
      <td><%= order.shipname %><br><%= order.shipaddress %><br><%= "#{order.shipcity}, #{order.shipstate} #{order.shipzip}" %></td>
      <td><%= best_in_place order, :carrier, :type => :input, :url => listing_order_path(id: order.id, listing_id: order.listing_id) %> </td>
      <td><%= best_in_place order, :tracking, :type => :input, :url => listing_order_path(id: order.id, listing_id: order.listing_id) %> </td>
    </tr>
  <% end %>
</table>
<p><%= will_paginate @listings, renderer: BootstrapPagination::Rails %></p>