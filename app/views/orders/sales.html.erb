<div class="center">
  <h2>Sales History for <%= current_user.name %></h2>
</div>

<% if user_signed_in? %>
  <%= link_to 'Add New Listing', new_listing_path, class: "btn btn-link", data: { no_turbolink: true } %>
<% end %>

<table class="table table-striped table-bordered">
  <tr>
    <th class="col-md-1">Order ID</th>
    <th class="col-md-2">Image</th>
    <th class="col-md-2">Item</th>
    <th class="col-md-1">Price</th>
    <th class="col-md-`">Customer</th>
    <th class="col-md-1">Date Sold</th>
    <th class="col-md-1">Carrier (UPS, USPS, etc.)</th>
    <th class="col-md-3">Shipment Tracking #</th>
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= image_tag order.listing.image.url(:thumb) %></td>
      <td><%= order.listing.name %></td>
      <td><%= number_to_currency(order.listing.price) %></td>
      <td><%= order.buyer.name %></td>
      <td><%= order.created_at.strftime("%B %-d, %Y") %></td>
      <td><%= best_in_place order, :carrier, :type => :input, :url => listing_order_path(id: order.id, listing_id: order.listing_id) %> </td>
      <td><%= best_in_place order, :tracking, :type => :input, :url => listing_order_path(id: order.id, listing_id: order.listing_id) %> </td>
    </tr>
  <% end %>
</table>