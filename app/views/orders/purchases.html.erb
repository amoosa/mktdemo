<div class="center">
  <h2>Purchase History for <%= current_user.name %></h2>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th class="col-md-3">Image</th>
    <th class="col-md-3">Item</th>
    <th class="col-md-2">Price</th>
    <th class="col-md-2">Seller</th>
    <th class="col-md-2">Date Purchased</th>
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td><%= image_tag order.listing.image.url(:thumb) %></td>
      <td><%= order.listing.name %></td>
      <td><%= number_to_currency(order.listing.price) %></td>
      <td><%= order.seller.name %></td>
      <td><%= order.created_at.strftime("%B %-d, %Y") %></td>
    </tr>
  <% end %>
</table>