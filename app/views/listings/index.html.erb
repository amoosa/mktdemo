<div class="jumbotron">
  <h1>Handcrafted items from <br>
      around the world.</h1>
  <h2>Discover one-of-a-kind items</h2>
</div>


<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
    <div class="col-md-3 col-xs-6">
      <div class="thumbnail" >
        <%= link_to image_tag(listing.image.url, class: "img-responsive"), listing %>
        <div class="caption">
          <h3><%= listing.name %></h3>
          <p><%= number_to_currency(listing.price) %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>



