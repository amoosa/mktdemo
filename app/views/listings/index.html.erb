<% if params[:page].nil? %>
<div class="jumbotron">
  <h1>Handcrafted items from <br>
      around the world.</h1>
  <h2>Discover one-of-a-kind items</h2>
</div>

<%= render 'featured' %>
<% end %>

<h4>New Additions</h4>
  <!-- CATEGORY DROP DOWN -->
       <p> <div class="btn-group">
          <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-toggle="dropdown">
            Category <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
             <li><%- Listing.uniq.pluck(:category).each do |category| %>
               <%= link_to category, category_path(category: category) %> 
              <% end %>
             </li>
          </ul>
        </div> </p>
   <!-- END CATEGORY DROP DOWN -->
<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3 col-sm-3 col-xs-6">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url(:medium), class: "img-responsive"), listing, data: { no_turbolink: true } %>
          <div class="caption">
            <h3><%= link_to listing.name.downcase.titleize, listing, data: { no_turbolink: true } %></h3>
            <p><%= number_to_currency(listing.price) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <p><%= will_paginate @listings, renderer: BootstrapPagination::Rails %></p>
</div>




