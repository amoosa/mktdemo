<% if params[:page].nil? %>
<div class="jumbotron">
  <h1>Handcrafted items from <br>
      around the world.</h1>
  <h2>Discover one-of-a-kind items</h2>
</div>

<%= render 'featured' %>
<% end %>

<h4>New Additions</h4>
<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3 col-sm-3 col-xs-6">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url(:medium), class: "img-responsive"), listing, data: { no_turbolink: true } %>
          <div class="caption">
            <h3><%= link_to listing.name.downcase.titleize, listing, data: { no_turbolink: true } %></h3>
            <p><%= number_to_currency(listing.price) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <p><%= will_paginate @listings, renderer: BootstrapPagination::Rails %></p>
</div>




