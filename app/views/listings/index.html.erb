<% provide(:title, "Boutique Jewelry and Accessories") %>
<% if params[:page].nil? %>

    <% if params[:sort].nil? %>
       <div class="well hpwell">
        <%= image_tag("mobile-logo.gif") %><br>Shop accessories from talented artisans and boutique brands.
        <br><span class="glyphicon glyphicon-chevron-down"></span>
       </div>
       <%= render 'featured' %>
       <!-- <%= render 'designers' %> -->
    <% end %>

<% end %>


<h4><b>Browse Collection</b></h4>

 <div class="dropdown">
    <button class="btn btn-default btn-xs dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
            Sort <%= params[:sort] %> <b class="caret"></b> </button>

    <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
      <li><%= link_to "New Arrivals", listings_path(:sort => "- New Arrivals")  %></li>
      <li><%= link_to "Price - Low to High", listings_path(:sort => "- Price - Low to High") %></li>
      <li><%= link_to "Price - High to Low", listings_path(:sort => "- Price - High to Low")  %></li>
      <li><%= link_to "Discover - Random Shuffle", listings_path(:sort => "- Random Shuffle")  %></li>
    </ul>

</div>
  <br>


<div class="center">

<% cache "homepage_p#{params[:page]}_s_#{params[:sort]}", skip_digest: true, expires_in: 1.days do %>
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-2 col-sm-3 col-xs-6 images">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url(:medium), class: "img-responsive"), listing, data: { no_turbolink: true } %>
          <div class="caption">
            <h3><%= link_to listing.name.downcase.titleize, listing, data: { no_turbolink: true } %></h3>
            <p>      
              <% if listing.saleprice.blank? %>
                <%= number_to_currency(listing.price) %>
              <% else %>
                <font color="red"><del><%= number_to_currency(listing.price) %></del>  
                <%= number_to_currency(listing.saleprice) %></font>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %> <!-- end cache block-->

  <p><%= will_paginate @listings, renderer: BootstrapPagination::Rails %></p>
</div>

<script>mixpanel.track("Homepage views")</script>




