<% provide(:title, @listing.name) %>
<div class="row">
  <div class="col-md-7"> 
     <div class="thumbnail">
      <div id="gallery-1" class="royalSlider rsDefault">
         
          	<%= link_to image_tag(@listing.image.url, class: "rsTmb img-responsive"), @listing.image.url, class: "rsImg" %> 
                   
            <% if !@listing.image2.url.include? "missing.jpg" %>
              <%= link_to image_tag(@listing.image2.url, class: "rsTmb img-responsive"), @listing.image2.url, class: "rsImg" %>
            <% end %>
               
            <% if !@listing.image3.url.include? "missing.jpg" %>
              <%= link_to image_tag(@listing.image3.url, class: "rsTmb img-responsive"), @listing.image3.url, class: "rsImg" %>
            <% end %>
             
            <% if !@listing.image4.url.include? "missing.jpg" %>
              <%= link_to image_tag(@listing.image4.url, class: "rsTmb img-responsive"), @listing.image4.url, class: "rsImg" %>
            <% end %>
       
      
    </div>
    </div> 
  </div>

    <script>
      jQuery(document).ready(function($) {
  $('#gallery-1').royalSlider({
    fullscreen: {
      enabled: true,
      nativeFS: true
    },
    controlNavigation: 'thumbnails',
    autoScaleSlider: true, 
    autoScaleSliderWidth: 960,     
    autoScaleSliderHeight: 850,
    imageScaleMode: 'fit-if-smaller',
    navigateByClick: true,
    numImagesToPreload:2,
    arrowsNav:true,
    arrowsNavAutoHide: true,
    /* arrowsNavHideOnTouch: true, */
    keyboardNavEnabled: true,
    fadeinLoadedSlide: true,
    globalCaption: true,
    globalCaptionInside: false,
    loop: true,
    thumbs: {
      appendSpan: true,
      firstMargin: true,
      paddingBottom: 4
    } 
  });
});
    </script>

  <div class="col-md-5"> 
  	<h3><%= @listing.name %></h3>
    <p><%= "Sold by #{@listing.user.name}. Ships in 1-2 business days." %></p>
    <p><%= number_to_currency(@listing.price) %></p>
  	<p><%= sanitize @listing.description, tags: %w(b p ul li) %></p>
    <br>

         <% if @listing.inventory == 1 %>
             <br><p><b><font color="red">Only 1 piece left. </font></b></p>
         <% end %>

        <% if @listing.inventory > 0 %>
            <%= link_to "Buy this item", new_listing_order_path(@listing), class: "btn btn-primary", data: { no_turbolink: true } %>
        <% else %>
          <br><p><b><font color="red">Sorry, we're sold out of this item. </font></b></p>
        <% end %>         

  </div>
</div>
<br>
