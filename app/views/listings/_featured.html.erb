<h4>Featured listings</h4>

<div class="center">
  <div class="row">
    <% @listings.where(:featured => true).each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(listing.image.url), listing %>
        <div class="caption">
          <h3><%= listing.name %></h3>
          <p><%= number_to_currency(listing.price) %></p>
        </div>
      </div>
    </div>
  <% end %>
 </div>
</div>