<h4>Featured listings</h4>

<div class="center">
  <div class="row">
    <% @listings.where(:featured => true).order("random()").limit(8).each do |listing| %>
        <div class="col-md-3 col-sm-3 col-xs-6">
        <div class="thumbnail" > 
           <%= link_to image_tag(listing.image.url(:medium), class: "img-responsive"), listing %> 
        </div>
        <div class="caption">
            <h3><%= link_to listing.name.downcase.titleize, listing %></h3>
            <p><%= number_to_currency(listing.price) %></p>
        </div> 
     </div>
    <% end %>
  </div>
</div>

