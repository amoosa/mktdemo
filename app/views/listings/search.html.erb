<h3>Search results</h3>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
    <div class="col-md-2 col-sm-3 col-xs-6">
      <div class="thumbnail">
        <%= link_to image_tag(listing.image.url), listing, data: { no_turbolink: true } %>
        <div class="caption">
          <h3><%= link_to listing.name.downcase.titleize, listing, data: { no_turbolink: true } %></h3>
          <p><%= number_to_currency(listing.price) %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

  <% if @listings.count == 0 %>
    <h5><font color="red">Sorry, there are no products matching your search.</font></h5>
  <% end %>

<script> 
$(function() {
    $('.thumbnail').matchHeight(byRow);
     }); 
</script>