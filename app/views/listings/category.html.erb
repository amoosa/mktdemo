<h4>Shop <%= @listing.category.downcase %>...</h4>

<div class="center">
  <div class="row">
    <% Listing.where("category = ? AND id != ? AND created_at >= ?", @listing.category, @listing.id, 30.days.ago).order("random()").limit(6).each do |listing| %>
        <div class="col-md-2 col-sm-3 col-xs-6">
        <div class="thumbnail" > 
           <%= link_to image_tag(listing.image.url(:medium), class: "img-responsive"), listing, data: { no_turbolink: true } %> 
        </div>
        <div class="caption">
            <h3><%= link_to listing.name.downcase.titleize, listing, data: { no_turbolink: true } %></h3>
            <p><%= number_to_currency(listing.price) %></p>
        </div> 
     </div>
    <% end %>
  </div>
</div>
<br>